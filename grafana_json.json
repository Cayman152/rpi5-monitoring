{
  "uid": "rpi-netdata-dashboard-v2",
  "title": "Raspberry Pi - Netdata",
  "tags": ["raspberrypi", "netdata", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "CPU Usage (%)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "100 - netdata_system_cpu_percentage_average{dimension=\"idle\",instance=\"localhost:19999\",job=\"netdata\"}",
          "legendFormat": "CPU Load"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 75 },
            { "color": "red", "value": 90 }
          ]}
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "CPU Temperature (Â°C)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "avg(netdata_sensors_temperature_Celsius_average{instance=\"localhost:19999\",job=\"netdata\"})",
          "legendFormat": "Temp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 60 },
            { "color": "red", "value": 80 }
          ]}
        }
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Memory Used (MiB)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "netdata_system_ram_MiB_average{instance=\"localhost:19999\",job=\"netdata\"}",
          "legendFormat": "RAM Used"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mebibytes"
        }
      },
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "stat",
      "title": "System Uptime (hours)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "netdata_system_uptime_seconds_average{instance=\"localhost:19999\",job=\"netdata\"} / 3600",
          "legendFormat": "Uptime (h)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "hours"
        }
      },
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (per dimension)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "netdata_system_cpu_percentage_average{instance=\"localhost:19999\",job=\"netdata\"}",
          "legendFormat": "{{dimension}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      },
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Temperature (all sensors)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "netdata_sensors_temperature_Celsius_average{instance=\"localhost:19999\",job=\"netdata\"}",
          "legendFormat": "{{chart}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "celsius" }
      },
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (MiB)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "netdata_system_ram_MiB_average{instance=\"localhost:19999\",job=\"netdata\"}",
          "legendFormat": "RAM"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "mebibytes" }
      },
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Network Traffic (eth0)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "rate(netdata_system_net_bytes_average{instance=\"localhost:19999\",job=\"netdata\"}[1m])",
          "legendFormat": "{{dimension}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytespersec" }
      },
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "System Uptime (s)",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "netdata_system_uptime_seconds_average{instance=\"localhost:19999\",job=\"netdata\"}",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      },
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 6 }
    }
  ]
}